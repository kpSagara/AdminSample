<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateItem">






    <EditText
        android:id="@+id/event_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/edit_text_file_update"
        android:hint="description, time and location"
        android:inputType="textMultiLine"
        android:lines="1"
        android:maxLines="2"
        android:minLines="0"
        android:maxLength="50"
        android:scrollbars="vertical"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_text_file_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/button_choose_image"
        android:hint="Event Title"
        android:inputType="text"/>

    <Button
        android:id="@+id/datebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Date"
        android:layout_below="@id/event_update"
        />

    <TextView
        android:id="@+id/datetextupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/datebutton"
        android:layout_below="@id/event_update"
        android:padding="10dp"
        android:text=""
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/datebutton"
        android:layout_above="@id/button_update"
        />

    <Button
        android:id="@+id/button_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Update" />

</RelativeLayout>